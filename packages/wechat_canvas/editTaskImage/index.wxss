.flexbox {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.index-box {
    width: 80px;
    font-size: 14px;
    text-align: center;
    background-color: #f0f0f0;
    margin: 0 auto;
    border-radius: 5px;
}

.preview-box {
    padding: 16px 25px;
}

.stu-img {
    width: calc(100vw - 50px);
    height: calc(100vh - 100px);
}

.preview-image {
    margin: 0 auto;
    text-align: center;
    display: block;
    position: absolute;
left: 15px;
right: 15px;
}

.movable-area {
    background-size: 100% 100%;
}

.prev-image {
    position: absolute;
    left: 8px;
    top: calc(50vh - 28px);
    width: 24px;
    height: 56px;
    background-size: 100% 100%;
    z-index: 20;
}

.next-image {
    position: absolute;
    right: 8px;
    top: calc(50vh - 28px);
    width: 24px;
    height: 56px;
    background-size: 100% 100%;
    z-index: 20;
}

.hidden-input{
    position:absolute;
    left:-999999px;
}

.canvas-box {
    position: relative;
    z-index: 10;
}

.canvas {
    position: absolute;
    top:0;
    left: 15px;
    right: 15px;
    margin: 0 auto;
    overflow: hidden;
}

.color-list {
    background-color: rgba(256, 256, 256, .8);
    padding: 8px 16px;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 50px;
}

.color-item {
    width: 20px;
    height: 20px;
    padding: 1px;
    border-radius: 50%;
    display: inline-block;
    margin-right: 25px;
}

.operator-box {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
}

.operator-item {
    display: inline-block;
    margin-right: 30px;
    width: 22px;
    height: 36px;
    background-size: 100% 100%;
}

