.complete-btn {
    padding: 0 10px;
    line-height: 32px;
    height: 32px;
    color: #fff;
    border-radius: 16px;
    background-color: #1BC9B7;
}

.textWindow{
    position: fixed;
    top:0;
    left: 0;
    width: 100%;
    height: calc(90vh - 100px);
    z-index: 99;
}
.textCancel,.textDone{
    width: 100rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    border:1px solid #ccc;
    background: #f4f4f4;
    border-radius: 8rpx;
    position: absolute;
    top:20rpx;
    z-index: 9;
}
.text-cancel{
    position: absolute;
    left: 20px;
    color: #1BC9B7;
    line-height: 28px;
    height: 28px;
    padding: 0 15px;
    text-align: center;
    background-color: #fff;
    border-radius: 14px;
    width: 32px;
    z-index: 10;
}
.text-done{
    position: absolute;
    right: 20px;
    color: #fff;
    line-height: 28px;
    height: 28px;
    padding: 0 15px;
    text-align: center;
    background-color: #1BC9B7;
    border-radius: 14px;
    width: 32px;
    z-index: 10;
}
.textShow{
    line-height: 1;
    text-align: left;
    height: 20px;
}